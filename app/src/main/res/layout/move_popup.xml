<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Theme_Dialog"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:text="@string/select_text"
                android:textColor="@color/colourThemeLightGray"
                android:textSize="@dimen/sub_title"
                android:layout_height="wrap_content" />

            <CalendarView
                android:id="@+id/moveCalendar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></CalendarView>

            <Button
                android:id="@+id/moveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colourCreateAppointment"
                android:text="Move"
                android:textColor="@color/colourWhite" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
